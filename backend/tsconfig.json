{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types"],
      "types": ["node"],
      "lib": ["ES6"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "alwaysStrict": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }